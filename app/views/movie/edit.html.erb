<h1> Edit a Movie! </h1>

<%= form_with model: @movie, method: :patch do |form|%>
    <%= form.label :name %>
    <%= form.text_field :name %>
    <%= form.label :rating %>
    <%= form.text_field :rating %>
    <%= form.label :review %>
    <%= form.text_field :review %>
    <%= form.submit "Update" %>
<% end %>

<p><%= link_to 'Back to Movies', movies_path %></p>